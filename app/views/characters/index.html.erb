<p id="notice"><%= notice %></p>

<h1 class="title">Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Collection Number</th>
      <th>Point Values</th>
      <th>Has trait?</th>
      <th>Range</th>
      <th>Total life clicks</th>
      <th>Targets</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.collection_number%></td>
        <td><%= character.point_value %></td>
        <td><% if character.trait_symbol? %>
              Yes
            <% else %>
              No
            <% end %></td>
        <td><%= character.range %></td>
        <td><%= character.total_clicks %></td>
        <td><%= character.targets %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

